<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Management</title>
    <link rel="stylesheet" href="/dashboard.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .management-container {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }
        .management-header {
            text-align: center;
            margin-bottom: 20px;
        }
        .management-form {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        .form-group {
            display: flex;
            flex-direction: column;
        }
        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
        }
        .form-group input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }
        .form-group button {
            grid-column: span 2;
            padding: 10px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        .form-group button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <!-- Include Header -->
    <%- include('partials/header') %>

    <div class="main-container">
        <!-- Include Sidebar -->
        <%- include('partials/sidebar', { page: 'management' }) %>
        <div class="main-content" >
            <!-- Main Content -->
            <div class="col-lg-10 offset-lg-2" style="margin-left: 150px;" >
                <div class="container py-4">
                    <div class="text-center mb-4">
                        <h1 class="display-5">Management Settings</h1>
                        <p class="lead">Update the commission, referral amounts, bonus, and rewards points.</p>
                    </div>
                    
                    <form id="managementForm" class="needs-validation" novalidate>
                        <div class="row">
                            <!-- Commission -->
                            <div class="col-md-6">
                                <label for="commission" class="form-label">Commission (%)</label>
                                <input type="number" class="form-control" id="commission" name="commission" value="<%= settings.commission %>" placeholder="Enter commission percentage" required>
                                <div class="invalid-feedback">Please provide a valid commission percentage.</div>
                            </div>
    
                            <!-- Referral -->
                            <div class="col-md-6">
                                <label for="referral" class="form-label">Referral Amount ($)</label>
                                <input type="number" class="form-control" id="referral" name="referral" value="<%= settings.referral %>" placeholder="Enter referral amount" required>
                                <div class="invalid-feedback">Please provide a valid referral amount.</div>
                            </div>
    
                            <!-- Bonus -->
                            <div class="col-md-6">
                                <label for="bonus" class="form-label">Bonus Amount ($)</label>
                                <input type="number" class="form-control" id="bonus" name="bonus" value="<%= settings.bonus %>" placeholder="Enter bonus amount" required>
                                <div class="invalid-feedback">Please provide a valid bonus amount.</div>
                            </div>
    
                            <!-- Rewards -->
                            <div class="col-md-6">
                                <label for="rewards" class="form-label">Loyalty Rewards</label>
                                <input type="number" class="form-control" id="rewards" name="rewards" value="<%= settings.rewards %>" placeholder="Enter rewards points" required>
                                <div class="invalid-feedback">Please provide a valid rewards points value.</div>
                            </div>
                        </div>
    
                        <!-- Submit Button -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-4">Save Settings</button>
                        </div>
                    </form>
                </div>
                </div>
        </div>
    </div>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Handle Form Submission
        document.getElementById('managementForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const settings = {
                commission: document.getElementById('commission').value,
                referral: document.getElementById('referral').value,
                bonus: document.getElementById('bonus').value,
                rewards: document.getElementById('rewards').value,
            };

            fetch('/api/management', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(settings),
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('Success!', "Settings updated successfully!", 'success');
                        // alert('Settings updated successfully!');
                        location.reload(); // Refresh page to show updated values
                    } else {
                        Swal.fire('Success!', "Failed to update settings.", 'success');
                    }
                })
                .catch(error => console.error('Error:', error));
        });
    </script>
</body>
</html>
