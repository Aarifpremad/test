                <a href="#" class="d-block py-2 px-3 rounded <%= page.includes('bot') ? 'bg-primary text-white' : '' %> boot-toggle" data-bs-toggle="collapse" data-bs-target="#bot-dropdown">
                    Bot Management <i class="bi bi-chevron-down ms-2"></i>
                </a>
                <ul id="bot-dropdown" class="list-unstyled collapse">
                    <li><a href="/boot" class="d-block py-2 px-3 rounded <%= page === 'bots-create' ? 'bg-primary text-white' : '' %>">Bots create</a></li>
                    <li><a href="/botlist" class="d-block py-2 px-3 rounded <%= page === 'botslist' ? 'bg-primary text-white' : '' %>">Bots list</a></li>
                </ul>
            </li>
            <li>
                <a href="/admin/support" class="d-block py-2 px-3 rounded <%= page === 'support' ? 'bg-primary text-white' : '' %>">Enquiry Management</a>
            </li>
            <li class="dropdown">
                <a href="#" class="d-block py-2 px-3 rounded <%= page.includes('settings') ? 'bg-primary text-white' : '' %> settings-toggle" data-bs-toggle="collapse" data-bs-target="#settings-dropdown">
                    Settings <i class="bi bi-chevron-down ms-2"></i>
                </a>
                <ul id="settings-dropdown" class="list-unstyled collapse">
                    <li><a href="/speenwheel" class="d-block py-2 px-3 rounded <%= page === 'spin' ? 'bg-primary text-white' : '' %>">Spin Wheel</a></li>
                    <li><a href="/management" class="d-block py-2 px-3 rounded <%= page === 'management' ? 'bg-primary text-white' : '' %>">Management</a></li>
                    <li><a href="/content-notification" class="d-block py-2 px-3 rounded <%= page === 'content-notification' ? 'bg-primary text-white' : '' %>">Content</a></li>
                    <li><a href="/notification" class="d-block py-2 px-3 rounded <%= page === 'notification' ? 'bg-primary text-white' : '' %>">Notification</a></li>
                </ul>
            </li>
        </ul>
    </aside>
