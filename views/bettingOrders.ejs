<body>
    <%- include('partials/header') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->

            <%- include('partials/sidebar', { page: 'orderHistory' }) %>

    
            <!-- Main Content -->
            <div class="col-md-9 col-lg-10">
                <div class="py-4">
                    <h3 class="mb-4">Orders History</h3>
    
                    <!-- Filter Section -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <form class="row g-3">
                                <div class="col-md-4">
                                    <label for="orderStatusFilter" class="form-label">Filter by Order Status:</label>
                                    <select id="orderStatusFilter" class="form-select">
                                        <option value="">All</option>
                                        <option value="pending">Pending</option>
                                        <option value="completed">Completed</option>
                                        <option value="cancelled">Cancelled</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="gameTypeFilter" class="form-label">Filter by Game Type:</label>
                                    <select id="gameTypeFilter" class="form-select">
                                        <option value="">All</option>
                                        <option value="ludo">Ludo</option>
                                        <option value="tournament">Tournament</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="dateFilter" class="form-label">Filter by Date:</label>
                                    <div class="d-flex">
                                        <input type="date" id="startDate" class="form-control me-2" />
                                        <input type="date" id="endDate" class="form-control" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
    
                    <!-- Data Table Section -->
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="ordersTable" class="table table-striped table-bordered nowrap pt-3" style="width:100%">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Order ID</th>
                                            <th>User ID</th>
                                            <th>Game Type</th>
                                            <th>Status</th>
                                            <th>Amount</th>
                                            <th>Created At</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Data will be populated dynamically -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function() {
            var table = $('#ordersTable').DataTable({
                serverSide: true,
                processing: true,
                pageLength: 10,
                dom: 'lBfrtip',
                buttons: [
                    'excelHtml5', 'pdfHtml5'
                ],
                ajax: function(data, callback, settings) {
                    const searchText = data.search.value || '';
                    const orderStatus = $('#orderStatusFilter').val();
                    const gameType = $('#gameTypeFilter').val();
                    const startDate = $('#startDate').val();
                    const endDate = $('#endDate').val();
                    const limit = data.length || 10;
                    const page = Math.floor(data.start / limit) + 1;
                    const orderColumn = data.columns[data.order[0].column].data || 'createdAt';
                    const orderDir = data.order[0].dir || 'desc';

                    $.ajax({
                        url: '/api/orders',
                        method: 'GET',
                        data: {
                            search: searchText,
                            orderStatus,
                            gameType,
                            startDate,
                            endDate,
                            limit,
                            page,
                            orderColumn,
                            orderDir,
                        },
                        success: function(response) {
                            callback({
                                draw: settings.draw,
                                recordsTotal: response.totalRecords,
                                recordsFiltered: response.filteredRecords,
                                data: response.orders.map(order => [
                                    order.orderId,
                                    order.userId,
                                    order.gameType,
                                    order.status,
                                    `$${order.amount}`,
                                    new Date(order.createdAt).toLocaleString(),
                                ])
                            });
                        },
                        error: function() {
                            callback({
                                draw: settings.draw,
                                recordsTotal: 0,
                                recordsFiltered: 0,
                                data: []
                            });
                        }
                    });
                }
            });

            $('#orderStatusFilter, #gameTypeFilter, #startDate, #endDate').change(function() {
                table.ajax.reload();
            });
        });
    </script>
</body>
</html>
