<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/dashboard.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            padding-top: 60px;
        }
        .modal-content {
            background-color: #fff;
            margin: 5% auto;
            padding: 20px;
            border-radius: 8px;
            width: 80%;
            max-width: 600px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .delete-button, .edit-button {
            padding: 6px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .delete-button {
            background-color: #dc3545;
            color: white;
        }
        .delete-button:hover {
            background-color: #c82333;
        }
        .edit-button {
            background-color: #28a745;
            color: white;
        }
        .edit-button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <div class="container-fluid">
        <div class="row">
            <%- include('partials/sidebar', { page: 'botslist' }) %>
            <div class="col-md-9 col-lg-10 py-4 px-4">
                <h3 class="mb-4">Bots List</h3>
                <div class="table-responsive">
                    <table id="botsTable" class="table table-striped table-bordered" style="width:100%">
                        <thead class="table-dark">
                            <tr>
                                <th>Bot ID</th>
                                <th>Bot Name</th>
                                <th>Nickname</th>
                                <th>Balance</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    
        <!-- Edit Bot Modal -->
        <div id="editModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Edit Bot</h4>
                    <button id="closeModal" style="font-size: 20px; cursor: pointer;">Ã—</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="botId">
                    <div class="mb-3">
                        <label for="botName">Bot Name</label>
                        <input type="text" id="botName" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="status">Status</label>
                        <select id="status" class="form-control">
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="saveBtn" class="btn btn-success">Save</button>
                    <button id="cancelBtn" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            var table = $('#botsTable').DataTable({
                serverSide: true,
                processing: true,
                ajax: function (data, callback) {
                    $.ajax({
                        url: '/api/bots',
                        method: 'GET',
                        data: {
                            search: data.search.value,
                            limit: data.length,
                            page: Math.floor(data.start / data.length) + 1,
                            orderColumn: data.columns[data.order[0].column].data,
                            orderDir: data.order[0].dir,
                        },
                        success: function (response) {
                            callback({
                                draw: data.draw,
                                recordsTotal: response.totalRecords,
                                recordsFiltered: response.filteredRecords,
                                data: response.bots.map(bot => [
                                    bot.numericid,
                                    bot.username,
                                    bot.nickname || 'N/A',
                                    bot.balance,
                                    bot.status ? 'Active' : 'Inactive',
                                    new Date(bot.createdAt).toLocaleString(),
                                    `<button class="edit-button edit-btn" data-id="${bot.numericid}">Edit</button>
                                     <button class="delete-button delete-btn" data-id="${bot.numericid}">Delete</button>`
                                ])
                            });
                        }
                    });
                }
            });

            // Open Edit Modal
            $(document).on('click', '.edit-btn', function () {
                const botId = $(this).data('id');
                $.get(`/api/bots/${botId}`, function (response) {
                    if (response.bot) {
                        $('#botId').val(botId);
                        $('#botName').val(response.bot.username);
                        $('#status').val(response.bot.status ? 'active' : 'inactive');
                        $('#editModal').show();
                    }
                });
            });

            // Save Bot Changes
            $('#saveBtn').click(function () {
                const botId = $('#botId').val();
                const botName = $('#botName').val();
                const status = $('#status').val() === 'active';

                $.ajax({
                    url: `/api/bots/${botId}`,
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify({ username: botName, status }),
                    success: function () {
                        Swal.fire('Success!', "successfully update", 'success');

                        $('#editModal').hide();
                        table.ajax.reload();
                    },
                    error: function () {
                        alert('Failed to update bot!');
                    }
                });
            });

            // Delete Bot
            $(document).on('click', '.delete-btn', function () {
                const botId = $(this).data('id');
                
            Swal.fire({
            title: 'Are you sure?',
            text: 'Do you want to Delete this Bot?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, change it!'
        }).then((result) => {
            if (result.isConfirmed) {
                    $.ajax({
                        url: `/api/bots/${botId}`,
                        method: 'DELETE',
                        success: function (response) {
                        Swal.fire('Success!', "successfully Delete Bot", 'success');

                            // alert(response.message || 'Bot deleted successfully!');
                            table.ajax.reload();
                        },
                        error: function () {
                            alert('Failed to delete bot!');
                        }
                    });
                }
            });
        })
            // Close Modal
            $('#closeModal, #cancelBtn').click(function () {
                $('#editModal').hide();
            });

            $(window).click(function (event) {
                if (event.target.id === 'editModal') {
                    $('#editModal').hide();
                }
            });
        });
    </script>
</body>
</html>
