<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Poll</title>
    <link rel="stylesheet" href="/dashboard.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .main-content {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        .form-section {
            margin-bottom: 25px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fdfdfd;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #555;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-actions {
            text-align: center;
            margin-top: 20px;
        }

        .form-actions button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-actions button:hover {
            background-color: #0056b3;
        }

        /* Thumbnail Styling */
        .thumbnail-preview {
            width: 100px;
            height: 100px;
            border-radius: 8px;
            object-fit: cover;
            margin-top: 10px;
        }

        .time-container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }

        .time-container .form-group {
            width: 48%; /* Split equally */
        }

        .slider-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .slider-container input {
            width: 80%;
        }
    </style>
</head>
<body>
    <!-- Include the header -->
    <%- include('partials/header') %>

    <div class="main-container">
        <%- include('partials/sidebar', { page: 'create-poll' }) %>
    
        <div class="main-content">
            <div class="container">
                <h1 class="mb-4">Create Pool</h1>
                <form id="pollForm" enctype="multipart/form-data">
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h2>Pool Details</h2>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="pollName" class="form-label">Pool Name:</label>
                                <input type="text" class="form-control" id="pollName" name="pollName" placeholder="Enter Pool name" required />
                            </div>
                            <div class="mb-3">
                                <label for="pollDescription" class="form-label">Description:</label>
                                <textarea class="form-control" id="pollDescription" name="pollDescription" rows="3" placeholder="Enter Pool description" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="startTime" class="form-label">Start Date/Time:</label>
                                <input type="datetime-local" class="form-control" id="startTime" name="startTime" required />
                            </div>
                            <div class="mb-3">
                                <label for="pollStatus" class="form-label">Status:</label>
                                <select class="form-select" id="pollStatus" name="pollStatus" required>
                                    <option value="open">Open</option>
                                    <option value="closed">Closed</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="pollType" class="form-label">Pool Type:</label>
                                <select class="form-select" id="pollType" name="pollType" required>
                                    <option value="2">2 Players</option>
                                    <option value="4">4 Players</option>
                                </select>
                            </div>
                        </div>
                    </div>
    
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h2>Thumbnail</h2>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="thumbnail" class="form-label">Upload Thumbnail:</label>
                                <input type="file" class="form-control" id="thumbnail" name="thumbnail" accept="image/*" onchange="previewThumbnail(event)" />
                                <img id="thumbnailPreview" class="img-fluid mt-3" src="#" alt="Thumbnail Preview" style="display: none; max-width: 200px; border: 1px solid #ddd;" />
                            </div>
                        </div>
                    </div>
    
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h2>Prize Distribution</h2>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="entryFee" class="form-label">Entry Fee (in coins):</label>
                                <input type="number" class="form-control" id="entryFee" name="entryFee" placeholder="Enter entry fee" min="1" required />
                            </div>
                            <div class="mb-3">
                                <label for="prizeType" class="form-label">Prize Type:</label>
                                <select class="form-select" id="prizeType" name="prizeType" onchange="togglePrizeField()" required>
                                    <option value="automatic">Automatic</option>
                                    <option value="manual">Manual</option>
                                </select>
                            </div>
                            <div class="mb-3" id="manualPrizeGroup" style="display: none;">
                                <label for="prizeAmount" class="form-label">Prize Amount:</label>
                                <input type="number" class="form-control" id="prizeAmount" name="prizeAmount" placeholder="Enter prize amount" />
                            </div>
                        </div>
                    </div>
    
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h2>Time Limit</h2>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="waitTime" class="form-label">Wait Time (in minutes):</label>
                                        <input type="number" class="form-control" id="waitTime" name="waitTime" placeholder="Enter wait time in minutes" min="1" max="60" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="gameDuration" class="form-label">Game Duration (in minutes):</label>
                                        <input type="number" class="form-control" id="gameDuration" name="gameDuration" placeholder="Enter game duration in minutes" min="1" max="120" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg">Create Pool</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Thumbnail Preview Function
        function previewThumbnail(event) {
            const thumbnail = document.getElementById('thumbnailPreview');
            const file = event.target.files[0];
    
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    thumbnail.style.display = 'block';
                    thumbnail.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }
    
        // Toggle Prize Amount Field Based on Selection
        function togglePrizeField() {
            const prizeType = document.getElementById('prizeType').value;
            const manualPrizeGroup = document.getElementById('manualPrizeGroup');
    
            if (prizeType === 'manual') {
                manualPrizeGroup.style.display = 'block';
            } else {
                manualPrizeGroup.style.display = 'none';
            }
        }
    
        // Handle Poll Form Submit
        document.getElementById('pollForm').addEventListener('submit', async function (event) {
            event.preventDefault();
    
            const formData = new FormData(this);
            const startTime = formData.get('startTime');
            const startDateObj = new Date(startTime);
    
            // Ensure the datetime-local fields have valid values
            if (isNaN(startDateObj.getTime())) {
                alert('Please select a valid start date.');
                return;
            }
    
            // Continue with form submission
            try {
                const response = await fetch('/api/create-poll', {
                    method: 'POST',
                    body: formData,
                });
    
                const result = await response.json();
                if (response.ok) {
                    this.reset(); // Reset the form
                    Swal.fire('Success!', "Create Pool", 'success');
                } else {
                    Swal.fire('Success!', "something wrong", 'success');
                }
            } catch (error) {
                alert(`An error occurred: ${error.message}`);
            }
        });
    </script>
    
</body>
</html>
